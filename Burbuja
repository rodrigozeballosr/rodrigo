#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;

void burbuja(int a[], int tam);

void cargar(int x[], int tam);
void mostrar(int x[], int tam);

void main()
{
	int n,numeros[MAX];
	float prom;
	cout<<"ingrese el numero de elementos:";
	cin>>n;
	cargar(numeros,n);
	burbuja(numeros,n);
	mostrar(numeros,n);
	//tenemos dos alternativas, mostrar el promedio directamente o asignar a una variable

	getch();
}

void cargar(int x[], int tam)
{
	for(int i=0;i<tam;i++)
	{
		cout<<"Ingrese un valor:";
		cin>> x[i];
	}
}

void mostrar(int x[], int tam)
{
	for(int i=0;i<tam;i++)
	{
		cout<<i<<"->"<<x[i]<<endl;
	}
}

void burbuja(int a[], int tam)
{
	int temp;
	for(int i=0; i<tam ; i++)
		for(int j=i+1; j<tam; j++)
		{
			if(a[i]>a[j])
			{   temp=a[i];
			    a[i]=a[j];
			    a[j]=temp;
			}
		}
}
