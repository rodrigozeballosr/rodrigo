#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main ()

{
	int a,b,factorial;
	    cout<<"Ingrese un numero para calcular el factorial"<<endl;
		cin>>a;
		factorial=1
		for (b=1; b<=a; b++);
			{
				factorial= b*factorial;
			}
			cout<<"El factorial es: "<<factorial<<endl;
			system ("pause");
	getch();
}
