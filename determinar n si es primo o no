#include "stdafx.h"
#include <iostream>
#include <cstdlib>
#include "conio.h" 
#include <time.h>

using namespace std;
void main() {
	int n,i=1,k=2;
	bool band;
	cout<<"Ingrese la cantidad de primos a generar: ";
	cin>>n;
	while (i<=n){
		 band=true;
		 for (int j=2;j<k;j++)
			 if (k % j==0) {
				 band=false;
		         break;
			 }   
	     if (band==true)
		 {
		 cout<< k <<",";
		 i++;
		 }
		 k++;
	}
	getch(); 
} 
