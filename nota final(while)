#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main() 
{
	int i, id,n;
	float nf,np,ef,p1,p2,p3;
	cout<<"Introduzca la cantidad de alumnos: ";
	cin>>n;
	i=1;
	while (i<=n);
	{
		cout<< " ID: ";
	    cin>> id;
		cout<< " Introduzca la nota practica: " ;
	    cin>> np;
		cout<< " Introduzca la nota del primer parcial: " ;
	    cin>> p1;
		cout<< " Introduzca la nota del segundo parcial: " ;
		cin>> p2;
		cout<< " Introduzca la nota del tercer parcial: " ;
		cin>> p3;
		cout<< " Introduzca la nota del examen final: ";
	    cin>> ef;
		nf=np*0.2+((p1+p2+p3)/3)*0.4+ef*0.4;
		cout<< " La nota final del alumno"<<id<<" es: "<< nf<<endl;
		i++
	}
	getch();
}
